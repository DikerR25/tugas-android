<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="NILAI SISWA"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edun"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8pt"
        android:background="@color/white"
        android:hint="Nilai UN"
        android:text="" />

    <EditText
        android:id="@+id/eduts"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8pt"
        android:background="@color/white"
        android:hint="Nilai UTS"
        android:text="" />

    <EditText
        android:id="@+id/eduas"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Nilai UAS"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="8pt" />

    <TextView
        android:id="@+id/edakhir"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#ED5A5A"
        android:hint="NILAI AKHIR"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bthitung"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:text="Hitung"
        android:onClick="hitung"
        app:backgroundTint="#F44336"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="372dp"

        android:background="#2C3EE4"
        android:text="SMK BAKTINUSANTARA 666"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textSize="16pt" />

</LinearLayout>
